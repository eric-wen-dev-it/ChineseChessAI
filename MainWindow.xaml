<Window x:Class="ChineseChessAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChineseChess AlphaZero Trainer" Height="650" Width="950">
    <Grid Background="#333333">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="20">
            <Border Background="#F5DEB3" BorderBrush="#5D4037" BorderThickness="3" CornerRadius="2" Padding="5">
                <Grid>
                    <Canvas x:Name="ChessLinesCanvas" IsHitTestVisible="False" />

                    <UniformGrid x:Name="ChessBoardGrid" Rows="10" Columns="9" Background="Transparent"/>
                </Grid>
            </Border>
        </Grid>

        <StackPanel Grid.Column="1" Margin="10,20,20,20">
            <Button x:Name="StartBtn" 
                    Content="开始进化" 
                    Height="45" 
                    FontSize="16" 
                    FontWeight="Bold"
                    Click="OnStartTrainingClick" 
                    Margin="0,0,0,15"
                    Background="#4CAF50" 
                    Foreground="White"/>

            <TextBlock Text="训练状态与实时日志:" 
                       Foreground="White" 
                       FontSize="14" 
                       Margin="0,0,0,5"/>

            <TextBox x:Name="LogBox" 
                     Height="480" 
                     VerticalScrollBarVisibility="Auto" 
                     IsReadOnly="True" 
                     Background="Black" 
                     Foreground="Lime" 
                     FontFamily="Consolas"
                     FontSize="12"
                     Padding="5"
                     TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>